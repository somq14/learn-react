{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    ":timezone(Asia/Tokyo)",
    "schedule:weekends",
    ":prHourlyLimitNone",
    ":maintainLockFilesWeekly"
  ],
  "commitMessagePrefix": "⬆️ ",
  "packageRules": [
    {
      "groupName": "patch versions",
      "matchUpdateTypes": ["patch"],
      "automerge": true
    }
  ]
}
